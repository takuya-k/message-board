<h1>メッセージ一覧</h1>
<!-- メッセージ一覧を取得開始 -->
<% @messages.each do |message| %>
  <!-- 名前の出力-->
  名前:<%= message.name %>

  <!-- 内容の出力-->
  内容:<%= message.body %>
  <br>
<% end %>
<!-- メッセージ一覧を取得終了 -->


<!-- メッセージ投稿を取得開始 -->
<%= form_for(@message) do |f| %>
  <!-- 名前の入力-->
  名前:<%= f.text_field :name %>
  
  <!-- 内容の入力-->
  内容:<%= f.text_field :body %>
  
  <!-- 送信ボタン -->
  <%= f.submit %>
<% end %>
<!-- メッセージ投稿を取得終了 -->